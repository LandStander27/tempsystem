# Maintainer: Sam Jones <land.sj@proton.me>

pkgname=tempsystem-git
pkgver=r30.2666171
pkgrel=1
pkgdesc="Quickly create a temporary system, using the Docker Engine API"
arch=("x86_64")
url="https://codeberg.org/Land/tempsystem"
license=("MIT")
provides=("tempsystem")
conflicts=("tempsystem")
depends=(
	"docker"
	"curl"
	"jsoncpp"
)
makedepends=(
	"git"
	"cmake"
	"make"
)

source=("${pkgname}::git+https://codeberg.org/Land/tempsystem")

sha1sums=('SKIP')

pkgver() {
	cd "$pkgname"
	( set -o pipefail
		git describe --long --abbrev=7 2>/dev/null | sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
		printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
	)
}

prepare() {
	cd "${srcdir}/${pkgname}"
}

build() {
	cd "${srcdir}/${pkgname}"
	rm -rf "${srcdir}/build"
	make build
}

package() {
	install -Dm755 "${srcdir}/${pkgname}/build/tempsystem" "$pkgdir/usr/bin/tempsystem"
	install -Dm644 "${srcdir}/${pkgname}/LICENSE" -t "$pkgdir/usr/share/licenses/$pkgname/"
}
